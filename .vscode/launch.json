{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C++ Program",
			"preLaunchTask": "C/C++: g++ build active file controlled by makefile",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": ["arg1", "arg2"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [{"name" : "moonboos", "value": "80233"}],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
        }
    ]
}